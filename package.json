{
  "name": "quilt-react",
  "private": true,
  "license": "MIT",
  "scripts": {
    "lint:scripts": "eslint . --max-warnings 0",
    "lint:styles": "stylelint src/**/*.scss --syntax scss",
    "lint": "lint:scripts && lint:styles",
    "test": "",
    "check": "npm run lint && npm run test",
    "start": "babel-watch demo/server/index.js",
    "build:node": "NODE_ENV=production babel src --out-dir .",
    "build:styles": "bin/styles",
    "build:lib": "NODE_ENV=productionBuild webpack src/index.js build/quilt.js --config webpack.config.babel.js",
    "build": "npm run build:node && npm run build:lib && npm run build:styles",
    "clean": "rm -rf build components styles utilities index.js",
    "preversion": "npm run clean && npm test",
    "prepublish": "npm run clean && npm run build",
    "version": "npm run build",
    "postversion": "git push && git push --tags && npm run clean"
  },
  "babel": {
    "presets": [
      "shopify/react"
    ],
    "env": {
      "production": {
        "plugins": [
          [
            "css-modules-transform",
            {
              "generateScopedName": "[local]-[hash:base64:5]"
            }
          ],
          "transform-react-constant-elements"
        ]
      },
      "productionBuild": {
        "plugins": [
          "transform-react-constant-elements"
        ]
      },
      "development": {
        "plugins": [
          [
            "react-transform",
            {
              "transforms": [
                {
                  "transform": "react-transform-hmr",
                  "imports": [
                    "react"
                  ],
                  "locals": [
                    "module"
                  ]
                },
                {
                  "transform": "react-transform-catch-errors",
                  "imports": [
                    "react",
                    "redbox-react"
                  ]
                }
              ]
            }
          ]
        ]
      }
    }
  },
  "eslintConfig": {
    "extends": [
      "plugin:shopify/react"
    ],
    "env": {
      "es6": true,
      "browser": true
    },
    "settings": {
      "import/ignore": [
        "node_modules",
        "\\.s?css$"
      ]
    },
    "rules": {
      "object-curly-spacing": "off",
      "shopify/require-flow": "off"
    }
  },
  "stylelint": {
    "extends": "stylelint-config-shopify"
  },
  "devDependencies": {
    "autoprefixer": "^6.3.6",
    "babel-cli": "^6.10.1",
    "babel-core": "^6.9.1",
    "babel-loader": "^6.2.4",
    "babel-plugin-css-modules-transform": "^0.1.1",
    "babel-plugin-react-transform": "^2.0.0",
    "babel-plugin-transform-react-constant-elements": "^6.9.1",
    "babel-preset-shopify": "^11.3.1-0",
    "babel-watch": "^2.0.2",
    "css-loader": "^0.23.1",
    "cssnano": "^3.7.1",
    "eslint": "^2.10.0",
    "eslint-plugin-shopify": "^12.1.0",
    "express": "^4.14.0",
    "extract-text-webpack-plugin": "^1.0.1",
    "flow-bin": "^0.27.0",
    "glob": "^7.0.5",
    "node-sass": "^3.8.0",
    "open": "0.0.5",
    "postcss-loader": "^0.9.1",
    "react-transform-catch-errors": "^1.0.2",
    "react-transform-hmr": "^1.0.4",
    "redbox-react": "^1.2.8",
    "sass-loader": "^3.2.1",
    "shelljs": "^0.7.0",
    "style-loader": "^0.13.1",
    "webpack": "^1.13.1",
    "webpack-dev-middleware": "^1.6.1",
    "webpack-hot-middleware": "^2.10.0"
  },
  "dependencies": {
    "core-js": "^2.4.0",
    "react": "^15.1.0",
    "react-dom": "^15.1.0"
  }
}
