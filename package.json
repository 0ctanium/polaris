{
  "name": "@shopify/quilt",
  "version": "0.5.0",
  "license": "MIT",
  "main": "index.js",
  "keywords": [
    "shopify",
    "pattern-library",
    "eyeglass-module"
  ],
  "scripts": {
    "flow": "flow",
    "lint:scripts": "eslint . --max-warnings 0",
    "lint:styles": "stylelint 'src/**/*.scss' --syntax scss",
    "lint": "yarn run lint:scripts && yarn run lint:styles",
    "format:scripts": "eslint . --fix >/dev/null",
    "format": "yarn run format:scripts",
    "test": "",
    "check": "yarn run flow && yarn run lint && yarn run test",
    "parker": "parker build/assets.css --format json > build/parker.json",
    "demo": "babel-node demo/server.js",
    "build:node": "babel src --out-dir lib",
    "build:styles": "bin/styles",
    "build:lib": "webpack src/components/index.js build/quilt.js --config config/webpack.babel.js",
    "build": "yarn run build:node && yarn run build:lib && yarn run build:styles",
    "clean": "rm -rf build components styles utilities index.js",
    "preversion": "yarn run clean && npm test",
    "prepublish": "",
    "version": "yarn run build",
    "postversion": "git push && git push --tags && yarn run clean"
  },
  "babel": {
    "presets": [
      "shopify/web",
      "shopify/react",
      "shopify/flow"
    ]
  },
  "eslintConfig": {
    "extends": [
      "plugin:shopify/react",
      "plugin:shopify/flow"
    ],
    "rules": {
      "react/forbid-component-props": "off",
      "react/no-unused-prop-types": "off"
    }
  },
  "devDependencies": {
    "babel-cli": "^6.16.0",
    "babel-core": "^6.17.0",
    "babel-loader": "^6.2.5",
    "babel-preset-shopify": "^15.0.1",
    "eslint": "^3.7.0",
    "eslint-plugin-shopify": "15.0.3",
    "express": "^4.14.0",
    "flow-bin": "^0.33.0",
    "open": "^0.0.5",
    "react": "^15.3.2",
    "react-dom": "^15.3.2",
    "webpack": "2.1.0-beta.25",
    "webpack-dev-middleware": "^1.8.4",
    "webpack-hot-middleware": "^2.13.0"
  },
  "peerDependencies": {
    "react": "^15.3.2",
    "react-dom": "^15.3.2"
  },
  "dependencies": {
    "@shopify/react-utilities": "^0.4.0",
    "autoprefixer": "^6.5.1",
    "classnames": "^2.2.5",
    "core-js": "^2.4.1",
    "css-loader": "^0.25.0",
    "extract-text-webpack-plugin": "2.0.0-beta.4",
    "node-sass": "^3.10.1",
    "postcss-calc": "^5.3.1",
    "postcss-discard-comments": "^2.0.4",
    "postcss-flexbugs-fixes": "^2.0.0",
    "postcss-loader": "0.13.0",
    "postcss-selector-matches": "^2.0.5",
    "postcss-will-change": "^1.1.0",
    "react-hot-loader": "3.0.0-beta.6",
    "sass-loader": "^4.0.2",
    "style-loader": "^0.13.1"
  }
}
