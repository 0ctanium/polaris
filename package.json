{
  "name": "@shopify/quilt",
  "version": "0.1.0",
  "license": "MIT",
  "scripts": {
    "flow": "flow",
    "lint:scripts": "eslint . --max-warnings 0",
    "lint:styles": "stylelint 'src/**/*.scss' --syntax scss",
    "lint": "yarn run lint:scripts && yarn run lint:styles",
    "format:scripts": "eslint . --fix >/dev/null",
    "format": "yarn run format:scripts",
    "test": "",
    "check": "yarn run flow && yarn run lint && yarn run test",
    "parker": "parker build/assets.css --format json > build/parker.json",
    "demo": "babel-node demo/server.js",
    "build:node": "babel src --out-dir .",
    "build:styles": "bin/styles",
    "build:lib": "webpack src/index.js build/quilt.js --config config/webpack.babel.js",
    "build": "yarn run build:node && yarn run build:lib && yarn run build:styles",
    "clean": "rm -rf build components styles utilities index.js",
    "preversion": "yarn run clean && npm test",
    "prepublish": "",
    "version": "yarn run build",
    "postversion": "git push && git push --tags && yarn run clean"
  },
  "keywords": [
    "shopify",
    "pattern-library"
  ],
  "babel": {
    "presets": [
      "shopify/web",
      "shopify/react",
      "shopify/flow"
    ]
  },
  "eslintConfig": {
    "extends": [
      "plugin:shopify/react",
      "plugin:shopify/flow"
    ],
    "rules": {
      "react/forbid-component-props": "off",
      "react/no-unused-prop-types": "off"
    }
  },
  "devDependencies": {
    "autoprefixer": "^6.5.1",
    "babel-cli": "^6.16.0",
    "babel-core": "^6.17.0",
    "babel-loader": "^6.2.5",
    "babel-preset-shopify": "^15.0.1",
    "core-js": "^2.4.1",
    "css-loader": "^0.25.0",
    "cssnano": "^3.7.7",
    "eslint": "^3.7.0",
    "eslint-plugin-shopify": "15.0.3",
    "express": "^4.14.0",
    "extract-text-webpack-plugin": "^1.0.1",
    "flow-bin": "^0.33.0",
    "node-sass": "^3.10.1",
    "open": "^0.0.5",
    "postcss-loader": "^1.0.0",
    "react": "^15.3.2",
    "react-dom": "^15.3.2",
    "react-hot-loader": "3.0.0-beta.6",
    "sass-loader": "^4.0.2",
    "style-loader": "^0.13.1",
    "webpack": "^1.13.2",
    "webpack-dev-middleware": "^1.8.4",
    "webpack-hot-middleware": "^2.13.0"
  },
  "peerDependencies": {
    "core-js": "^2.4.1",
    "react": "^15.3.2",
    "react-dom": "^15.3.2"
  },
  "dependencies": {
    "@shopify/react-utilities": "^0.4.0",
    "classnames": "^2.2.5"
  }
}
