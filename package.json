{
  "name": "@shopify/quilt",
  "version": "0.10.1",
  "license": "MIT",
  "keywords": [
    "shopify"
  ],
  "main": "index.js",
  "module": "index.es.js",
  "jsnext:main": "index.es.js",
  "types": "types/index.d.ts",
  "scripts": {
    "lint:js": "eslint . --max-warnings 0",
    "lint:ts": "tslint --config ./config/tslint/full.json './{components}/**/*.{ts,tsx}' --project tsconfig.json --type-check",
    "lint": "npm-run-all lint:js lint:ts",
    "test": "jest --config ./config/jest/config.json",
    "check": "npm-run-all lint test",
    "clean": "rimraf build index.*",
    "prebuild": "yarn run clean",
    "build": "babel-node ./scripts/build.js",
    "precdn": "yarn run build",
    "cdn": "node ./scripts/deploy.js",
    "prepublish": "yarn run build",
    "postpublish": "in-publish && yarn run cdn || echo not-in-publish"
  },
  "devDependencies": {
    "@shopify/images": "^1.0.0",
    "@shopify/js-uploader": "git+ssh://git@github.com/Shopify/js-uploader.git",
    "@types/enzyme": "^2.7.7",
    "@types/jest": "^19.2.2",
    "aws-sdk": "^2.6.8",
    "babel-cli": "^6.24.0",
    "babel-core": "^6.23.1",
    "babel-preset-shopify": "^16.0.2",
    "copyfiles": "^1.2.0",
    "enzyme": "^2.8.0",
    "eslint": "^3.15.0",
    "eslint-plugin-shopify": "^15.1.1",
    "fs-extra": "^2.1.2",
    "generic-names": "^1.0.2",
    "in-publish": "^2.0.0",
    "jest": "^19.0.2",
    "node-sass": "^4.5.2",
    "npm-run-all": "^4.0.2",
    "postcss": "^5.2.16",
    "postcss-modules-extract-imports": "^1.0.1",
    "postcss-modules-local-by-default": "^1.1.1",
    "postcss-modules-parser": "^1.1.0",
    "postcss-modules-scope": "^1.0.2",
    "postcss-modules-values": "^1.2.2",
    "postcss-shopify": "^1.0.0",
    "react": "^15.4.2",
    "react-dom": "^15.4.2",
    "rimraf": "^2.6.1",
    "rollup": "^0.41.6",
    "rollup-plugin-babel": "^2.7.1",
    "rollup-plugin-commonjs": "^8.0.2",
    "rollup-plugin-image": "^1.0.2",
    "rollup-plugin-node-resolve": "^3.0.0",
    "rollup-plugin-scss": "^0.2.0",
    "rollup-pluginutils": "^2.0.1",
    "shelljs": "^0.7.7",
    "svgo": "^0.7.2",
    "tslint": "^4.4.2",
    "tslint-config-shopify": "^1.1.4",
    "typescript": "^2.1.6"
  },
  "peerDependencies": {
    "react": "^15.4.2",
    "react-dom": "^15.4.2"
  },
  "eslintConfig": {
    "extends": [
      "plugin:shopify/esnext",
      "plugin:shopify/node"
    ],
    "env": {
      "jest": true
    }
  },
  "babel": {
    "presets": [
      "shopify/node"
    ]
  },
  "files": [
    "src",
    "index.js",
    "index.es.js",
    "styles.css"
  ],
  "dependencies": {
    "@shopify/javascript-utilities": "^1.0.1",
    "@shopify/react-utilities": "^1.0.0",
    "@types/react": "^15.0.11",
    "@types/react-dom": "^0.14.23",
    "babel-runtime": "^6.23.0",
    "tslib": "^1.6.0"
  }
}
