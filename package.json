{
  "name": "@shopify/quilt",
  "version": "0.10.1",
  "license": "MIT",
  "keywords": [
    "shopify"
  ],
  "scripts": {
    "ts": "tsc --noEmit",
    "lint:js": "eslint . --max-warnings 0",
    "lint:ts": "tslint --config ./config/tslint/full.json './{components}/**/*.{ts,tsx}' --project tsconfig.json --type-check",
    "lint": "npm-run-all lint:js lint:ts",
    "test": "jest --config ./config/jest/config.json",
    "check": "npm-run-all lint ts test",
    "prebuild": "rimraf build",
    "build": "webpack --config config/webpack/config.js",
    "precdn": "yarn run build",
    "cdn": "node ./scripts/deploy.js 'build/*.{js,css}'",
    "postpublish": "in-publish && yarn run cdn || echo not-in-publish"
  },
  "devDependencies": {
    "@shopify/js-uploader": "git+ssh://git@github.com/Shopify/js-uploader.git",
    "awesome-typescript-loader": "^3.0.4",
    "aws-sdk": "^2.6.8",
    "babel-core": "^6.23.1",
    "babel-loader": "^6.3.2",
    "babel-preset-shopify": "^16.0.2",
    "case-sensitive-paths-webpack-plugin": "^1.1.4",
    "css-loader": "^0.26.1",
    "eslint": "^3.15.0",
    "eslint-plugin-shopify": "^15.1.1",
    "extract-text-webpack-plugin": "2.0.0-rc.3",
    "fs-extra": "^2.1.2",
    "glob": "^7.1.1",
    "in-publish": "^2.0.0",
    "jest": "^19.0.2",
    "node-sass": "^4.5.0",
    "npm-run-all": "^4.0.2",
    "rimraf": "^2.6.1",
    "sass-loader": "^6.0.1",
    "style-loader": "^0.13.1",
    "tslint": "^4.4.2",
    "tslint-config-shopify": "^1.1.4",
    "typescript": "^2.1.6",
    "webpack": "^2.2.1"
  },
  "peerDependencies": {
    "react": "^15.4.2",
    "react-dom": "^15.4.2"
  },
  "eslintConfig": {
    "extends": [
      "plugin:shopify/esnext",
      "plugin:shopify/node"
    ]
  },
  "files": [
    "styles/foundation/breakpoints.scss",
    "styles/foundation/spacing.scss",
    "styles/foundation/utilities.scss",
    "index.ts",
    "components/index.ts",
    "components/Content/*.{scss,tsx,ts}"
  ],
  "dependencies": {
    "@types/react": "^15.0.11",
    "@types/react-dom": "^0.14.23"
  }
}
