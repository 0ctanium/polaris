{
  "name": "@shopify/quilt",
  "version": "0.10.1",
  "license": "MIT",
  "keywords": [
    "shopify"
  ],
  "main": "./index.js",
  "module": "es/index.js",
  "jsnext:main": "es/index.js",
  "types": "types/index.d.ts",
  "scripts": {
    "lint:js": "eslint . --max-warnings 0",
    "lint:ts": "tslint --config ./config/tslint/full.json './{components}/**/*.{ts,tsx}' --project tsconfig.json --type-check",
    "lint": "npm-run-all lint:js lint:ts",
    "test": "jest --config ./config/jest/config.json",
    "check": "npm-run-all lint test",
    "clean:ts": "rimraf ts",
    "clean:lib": "rimraf components index.js",
    "clean:es": "rimraf es",
    "clean:build": "rimraf build",
    "clean": "rimraf build ts es types && yarn clean:lib",
    "build:ts": "yarn clean:ts && tsc && yarn build:ts:copy:styles",
    "build:ts:copy:styles": "copyfiles './src/components/**/*.scss' './ts'",
    "prebuild:lib": "yarn clean:lib",
    "build:lib": "yarn build:lib:babel",
    "build:lib:babel": "cross-env BABEL_ENV=commonjs babel ./ts/src --out-dir .",
    "prebuild:es": "yarn clean:es",
    "build:es": "yarn build:es:babel",
    "build:es:babel": "cross-env BABEL_ENV=es babel ./ts/src --out-dir ./es",
    "build:cdn" : "webpack --config config/webpack/config.js",
    "prebuild": "yarn run clean",
    "build": "npm-run-all build:cdn build:ts build:lib build:es clean:ts",
    "precdn": "yarn run build",
    "cdn": "node ./scripts/deploy.js 'build/*.{js,css}'",
    "postpublish": "in-publish && yarn run cdn || echo not-in-publish"
  },
  "devDependencies": {
    "@shopify/js-uploader": "git+ssh://git@github.com/Shopify/js-uploader.git",
    "awesome-typescript-loader": "^3.0.4",
    "aws-sdk": "^2.6.8",
    "babel-cli": "^6.24.0",
    "babel-core": "^6.23.1",
    "babel-eslint": "^7.2.0",
    "babel-loader": "^6.3.2",
    "babel-plugin-css-modules-transform": "^1.2.7",
    "babel-polyfill": "^6.23.0",
    "babel-preset-shopify": "^16.0.2",
    "babel-register": "^6.24.0",
    "case-sensitive-paths-webpack-plugin": "^1.1.4",
    "copyfiles": "^1.2.0",
    "cross-env": "^3.2.4",
    "css-loader": "^0.26.1",
    "eslint": "^3.15.0",
    "eslint-plugin-shopify": "^15.1.1",
    "extract-text-webpack-plugin": "2.0.0-rc.3",
    "fs-extra": "^2.1.2",
    "glob": "^7.1.1",
    "in-publish": "^2.0.0",
    "jest": "^19.0.2",
    "node-sass": "^4.5.0",
    "npm-run-all": "^4.0.2",
    "rimraf": "^2.6.1",
    "sass-loader": "^6.0.1",
    "style-loader": "^0.13.1",
    "tslint": "^4.4.2",
    "tslint-config-shopify": "^1.1.4",
    "typescript": "^2.1.6",
    "webpack": "^2.2.1"
  },
  "peerDependencies": {
    "react": "^15.4.2",
    "react-dom": "^15.4.2"
  },
  "eslintConfig": {
    "extends": [
      "plugin:shopify/esnext",
      "plugin:shopify/node"
    ]
  },
  "files": [
    "components",
    "index.js",
    "es",
    "types"
  ],
  "dependencies": {
    "@types/react": "^15.0.11",
    "@types/react-dom": "^0.14.23"
  }
}
